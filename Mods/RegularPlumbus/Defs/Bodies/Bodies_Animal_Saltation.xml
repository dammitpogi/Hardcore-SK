<?xml version="1.0" encoding="utf-8" ?>

<!--
  Each coverage value is relative to its parent.
  Remaining body part coverage (100% minus coverage of all child nodes) is a chance to hit exactly this part.
  Damage "starts" at corePart, and then "goes deeper" until it hits remaining body part coverage or leaf node
  - this body part is then hit.
-->

<Defs>

  <BodyDef>
	<defName>SaltationBouncingAnimalWithHands</defName>
    <label>saltation animal</label>
	<corePart>
	  <def>Head</def>
      <height>Middle</height>
      <depth>Outside</depth>
      <parts>
        <li>
          <def>Skull</def>
          <coverage>0.18</coverage>
          <depth>Inside</depth> 
          <parts>
            <li>
              <def>Brain</def>
              <coverage>0.8</coverage>
              <groups>
                <li>UpperHead</li>
                <li>FullHead</li>
              </groups>
            </li>
			<li>
			  <def>Stomach</def>
			  <coverage>0.025</coverage>
			  <depth>Inside</depth>
			</li>
            <li>
              <def>Heart</def>
              <coverage>0.020</coverage>
              <depth>Inside</depth>
            </li>
            <li>
              <def>Lung</def>
              <customLabel>left lung</customLabel>
              <coverage>0.025</coverage>
              <depth>Inside</depth>
            </li>
            <li>
              <def>Lung</def>
