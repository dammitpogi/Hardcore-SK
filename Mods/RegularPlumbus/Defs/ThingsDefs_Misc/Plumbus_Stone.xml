  <ThingDef ParentName="ChunkRockBase">
    <defName>ChunkGrumbo</defName>
    <label>grumbo chunk</label>
    <graphicData>
      <color>(77,142,195)</color>
    </graphicData>
    <statBases>
      <Mass>22</Mass>
    </statBases>
    <soundDrop>ChunkRock_Drop</soundDrop>
    <butcherProducts>
      <BlocksGrumbo>20</BlocksGrumbo>
    </butcherProducts>
  </ThingDef>

  <ThingDef ParentName="StoneBlocksBase">
    <defName>BlocksGrumbo</defName>
    <label>grumbo blocks</label>
    <description>Blocks of solid grumbo.</description>
    <graphicData>
      <color>(77,142,195)</color>
    </graphicData>
    <statBases>
      <Mass>1.1</Mass>
	  <MarketValue>5</MarketValue>
    </statBases>
    <stuffProps>
      <color>(77,142,195)</color>
      <soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <stuffAdjective>grumbo</stuffAdjective>
      <statFactors>
	    <Beauty>1.25</Beauty>
        <MaxHitPoints>1.45</MaxHitPoints>
      </statFactors>
    </stuffProps>
  </ThingDef>

  <RecipeDef ParentName="MakeStoneBlocksBase">
    <defName>Make_StoneBlocksGrumbo</defName>
    <label>make grumbo blocks</label>
    <description>Cuts grumbo chunks into usable blocks.</description>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChunkGrumbo</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ChunkGrumbo</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <BlocksGrumbo>20</BlocksGrumbo>
    </products>
  </RecipeDef>
  
</Defs>