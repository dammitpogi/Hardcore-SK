    <defName>GrumboBase</defName>
    <label>grumbo</label>
    <description>A porous yet resilient rock. Its rarity, beauty and unique color fetches it a good trading price.</description>
    <graphicData>
      <color>(77,142,195)</color>
    </graphicData>
    <statBases>
      <MaxHitPoints>750</MaxHitPoints>
	  <Beauty>-1</Beauty>
    </statBases>
    <building>
	  <isResourceRock>true</isResourceRock>
      <mineableThing>ChunkGrumbo</mineableThing>
      <mineableDropChance>0.25</mineableDropChance>
      <smoothedThing />
	  <mineableScatterCommonality>0.2</mineableScatterCommonality>
    </building>
  </ThingDef>

